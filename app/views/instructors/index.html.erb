<p id="notice"><%= notice %></p>
<% if current_admin %>
    <table class="ui fixed single line celled table">
        <thead>
            <h1 class="instructors">Instructors</h1>
              <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Salary</th>
                <th>Education</th>
                <th>Age</th>
                <th>Cohort</th>
                <th>Option</th>
              </tr>
            </thead>
            
    <tbody>
        <% @instructors.each do |instructor| %>
                
        <tr id="instructor-<%= instructor.id %>">
        
                <td><%= instructor.first_name %></td>
                <td><%= instructor.last_name %></td>
                <td><%= instructor.salary %></td>
                <td><%= instructor.education %></td>
                <td><%= instructor.age %></td>

               

            <% if instructor.cohorts.nil? %>
            <p> not availiable <p>

            <% else %>

            <% @cohort= instructor.cohorts %>
            <td><a href="/cohorts/<%= @cohort_id %>"> <%= @cohort.name %> </a></td>

             <% end %>
                <td> 
                    <%= link_to 'Show', instructor, :class=> "ui tiny olive button"%>
                    <%= link_to 'Edit', edit_instructor_path(instructor), :class=> "ui tiny olive button"%>
                    <%= link_to 'Delete', instructor_path(instructor), method: :delete, remote:true, data: { confirm: 'Are you sure?' }, :class=> "ui tiny olive button" %>
                </td>
                        
            <% end %>
        </tr>
    </tbody>
    </table>
<% end %>




<br>

