<!DOCTYPE html>
<html>
  <head>
    <title>Pamela</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Dancing+Script" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.7/semantic.min.css" integrity="sha256-wT6CFc7EKRuf7uyVfi+MQNHUzojuHN2pSw0YWFt2K5E=" crossorigin="anonymous" />
  </head>

  <style>
  .pusher{
    padding-top: 40px;
  } 
  </style>

  <body>
  <% if current_admin %>
    <div class="ui sidebar vertical top inverted menu" style= "background-color: #2D93AD;">
    
      <a class="item" href="/">
      Home
      </a>
      <a class="item" href="/cohorts">
        Cohort
      </a>
      <a class="item" href="/courses">
        Course
      </a>
      <a class="item" href="/instructors">
        Instructor
      </a>
      <a class="item" href="/students">
        Student
      </a>
    
      <a class="item" <%= link_to 'Sign out', destroy_admin_session_path,
          method: :delete %></a>
  </div>
  <% end %>
  <div class="pusher">
  <% if current_admin %>
      <div class="ui basic icon top fixed menu" style= "background-color: #2D93AD;">
        <a id="toggle" class="item">
          <i class="sidebar icon"></i>
          Menu
          </a>
        
      </div>
      <% end %>

    


  <% if !current_admin %>
  <div class="ui paddent center aligned text container piled grey segment">

      <%else%>
    
      <%= render 'layouts/alerts' %>
      <%end%>
    
      <%= yield %>
  </div>
</div>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

    <%= yield %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.min.js"></script>
  </body>
</html>
